<h1>作品編集</h1>

 <%= form_with model: @work, url: admins_work_path(@work.id), method: :patch do |f| %>
  <h4>作品名</h4>
   <%= f.text_field :name %>
  <h4>あらすじ</h4>
   <%= f.text_area :story %>
   <h4>公式サイト</h4>
   <%= f.text_field :website %><br/>
   <div class="check_box">
    <span>タグ</span>
     <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
     <div>
       <%= tag.label do %>
       <%= tag.check_box %>
       <%= tag.text %>
      <% end %>
      </div>
     <% end %>
   </div>
  <%= f.submit '更新する' %>

<% end %>