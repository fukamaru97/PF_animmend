<h1>作品登録</h1>

 <% if @work.errors.any? %>
   <%= @work.errors.count %>件のエラーが発生しました
   <ul>
     <% @work.errors.full_messages.each do |message| %>
       <li><%= message %></li>
     <% end %>
   </ul>
 <% end %>

 <%= form_with model: @work, url: admins_works_path, method: :post do |f| %>
  <h4>作品画像</h4>
   <%= f.file_field :image, accept: "image/*" %>
  <h4>作品名</h4>
   <%= f.text_field :name %>
  <h4>ストーリー</h4>
   <%= f.text_area :story %><br/>
  <h4>ジャンル <%= f.collection_select :genre_id, Genre.all, :id, :name %></h4>

  <%= f.submit '登録する' %>
<% end %>