<h2>作品名</h2>
<p><%= @work.name %></p>

<h2>あらすじ</h2>
<p><%= @work.story %></p>

<% @work.tags.each do |tag| %>
 <%= tag.name %>
<% end %>

<div>
    <p>コメント件数:<%= @work.post_comments.count %></p>

    <% @work.post_comments.each do |post_comment| %>
      <p><%= image_tag post_comment.user.get_profile_image(30,30) %></p>
      <%= link_to "#{post_comment.user.name}", users_user_path(post_comment.user) %>
      <%= post_comment.created_at.strftime('%Y/%m/%d') %><%= post_comment.comment %>
      <p>評価 :<%= post_comment.rate %>点</p>

      <div id="star-rate-<%= post_comment.id%>"></div>
      <script>
          $('#star-rate-<%= post_comment.id %>').raty({
            size: 36,
            starOff:  '<%= asset_path('star-off.png') %>',
            starOn : '<%= asset_path('star-on.png') %>',
            starHalf: '<%= asset_path('star-half.png') %>',
            half: true,
            readOnly: true,
            score: <%= post_comment.rate %>,
          });
          </script>

        <%= link_to "コメントを削除", admins_work_post_comment_path(post_comment.work, post_comment), method: :delete, "data-confirm" => "本当に削除しますか？" %>
    <% end %>
</div>

<%= link_to "作品を編集", edit_admins_work_path(@work.id) %>
<%= link_to "作品を削除", admins_work_path(@work.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
