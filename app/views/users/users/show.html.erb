<div class="container">

  <div class="row">
    <div class="col-md-3">
      <h3>マイページ</h3>
      <div>
        <%= image_tag @user.get_profile_image(100,100) %>
        <h5><%= @user.name %></h5>
        <% if @user.id == current_user.id %>
        <p><%= link_to "プロフィール編集", edit_users_user_path %></p>
        <% end %>
        <% if current_user != @user %>
          <% if current_user.following?(@user) %>
          <%= link_to 'フォロー外す', users_user_relationships_path(@user.id), method: :delete, class: "btn-sm btn-danger" %>
          <% else %>
          <%= link_to 'フォローする', users_user_relationships_path(@user.id), method: :POST, class:"btn-sm btn-success" %>
          <% end %>
        <% end %>
      </div>

      <div class="d-flex">
          <%= link_to follows_users_user_path(@user) do %>
          <h6>フォロー<%= @following_users.count %></h6>
          <% end %>&nbsp;&nbsp;
          <%= link_to followers_users_user_path(@user) do %>
          <h6>フォロワー<%= @follower_users.count %></h6>
          <% end %>
      </div>
    </div>

    <div class="col-md-8 offset-md-1">
      <div class="watchlist">
      <h3>ウォッチリスト</h3>
      <div class="card-deck" style="width:30rem">
        <% @watchlists.each do |watchlist| %>
          <div class="card">
            <%= image_tag watchlist.work.get_image %>
            <%= link_to users_work_path(watchlist.work) do %>
              <%= watchlist.work.name %>
            <% end %>
          </div>
          <% end %>
      </div>
      </div>

      <h3>評価した作品</h3>
        <div class="card-deck" style="width:30rem">
          <% @post_comments.each do |work|%>
            <div class="card">
        　     <%= image_tag work.get_image %>
            　<%= link_to work.name, users_work_path(work.id) %>
            </div>
          <% end %>
        </div>
    </div>

  </div>

</div>